{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<div class="container ">

    {% for post in posts %}
        <div class="border border-black mt-4 p-3">
        <h1>{{ post.title }}</h1>

        <p>{{ post.content }}</p>
            <a class="btn btn-success" href="{{ path('show_post',{id:post.id}) }}">Voir</a>
        </div>

    {% endfor %}




</div>
{% endblock %}
